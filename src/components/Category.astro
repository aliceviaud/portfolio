---
const { category } = Astro.props;

function getClass(category: 'plastic' | 'digital' | 'photo') {
    switch (category) {
        case 'plastic':
            return 'bg-amber-100 text-amber-600 border-amber-300';
        case 'digital':
            return 'bg-blue-100 text-blue-600 border-blue-300';
        case 'photo':
            return 'bg-green-100 text-green-600 border-green-300';
        default:
            return 'bg-gray-100 text-gray-600 border-gray-300';
    }
}

function getText(category: 'plastic' | 'digital' | 'photo') {
    switch (category) {
        case 'plastic':
            return 'Plastique';
        case 'digital':
            return 'Num√©rique';
        case 'photo':
            return 'Photo';
        default:
            return 'Autre';
    }
}

---

<p class={`h-fit rounded-full border px-3 py-1.5 text-sm font-semibold leading-none w-fit ${getClass(category)}`}>
    { getText(category) }
</p >